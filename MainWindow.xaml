<Window x:Class="Project1_WindowProgramming.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project1_WindowProgramming"
        mc:Ignorable="d"
        Title="Food Recipe" Height="450" Width="800">
    <Grid Background="#FF6AA2DA">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="56.25"></RowDefinition>
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="1" Fill="#FF05516E" Panel.ZIndex="0"></Rectangle>
        <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="1" Panel.ZIndex="1">
            <Button Content="Search" Width="160" Height="56.25" BorderBrush="#FF032836" Foreground="White" Background="#FF05516E"></Button>
            <Button Content="Home" Width="160" Height="56.25" BorderBrush="#FF032836" Foreground="White" Background="#FF05516E"></Button>
            <Button Content="Add Dish(es)" Width="160" Height="56.25" BorderBrush="#FF032836" Foreground="White" Background="#FF05516E"></Button>
        </WrapPanel>
    </Grid>
</Window>
